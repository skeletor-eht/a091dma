# ===========================================
# AI Time Entry Rewrite - Environment Config
# ===========================================
# Copy this file to .env and update with your production values
# IMPORTANT: Never commit .env to version control!

# Application Settings
APP_NAME="AI Time Entry Rewrite"
APP_VERSION="1.0.0"
DEBUG=false

# Security Settings
# CRITICAL: Generate a secure random key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="CHANGE-ME-IN-PRODUCTION-USE-LONG-RANDOM-STRING"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
# Comma-separated list of allowed origins
# Development example:
CORS_ORIGINS="http://localhost:3000,http://localhost:9001,http://127.0.0.1:9001"
# Production example:
# CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Database
# SQLite (default for development):
DATABASE_URL="sqlite:///./time_rewrite.db"
# PostgreSQL (recommended for production):
# DATABASE_URL="postgresql://user:password@localhost:5432/time_rewrite"

# LLM Configuration (Ollama)
OLLAMA_URL="http://localhost:11434/api/generate"
MODEL_NAME="qwen2.5:7b"
LLM_TIMEOUT=90

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
# Allowed extensions as JSON array or leave default
# ALLOWED_UPLOAD_EXTENSIONS='[".pdf"]'

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Password Requirements
MIN_PASSWORD_LENGTH=8
